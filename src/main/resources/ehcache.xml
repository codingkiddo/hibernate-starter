<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.ehcache.org/v3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107">

  <!-- Enable JSR-107 (JCache) service so caches can be created by name -->
  <service>
    <jsr107:defaults/>
  </service>

  <!-- A default template used when Hibernate asks for a region by name -->
  <cache alias="default">
    <key-type>java.lang.Object</key-type>
    <value-type>java.lang.Object</value-type>
    <expiry><ttl unit="minutes">30</ttl></expiry>
    <resources><heap unit="entries">10000</heap></resources>
  </cache>

  <!-- Optional: make query cache results (ID lists) short-lived -->
  <cache alias="default-query-results-region">
    <key-type>java.lang.Object</key-type>
    <value-type>java.util.List</value-type>
    <expiry><ttl unit="minutes">10</ttl></expiry>
    <resources><heap unit="entries">1000</heap></resources>
  </cache>
</config>