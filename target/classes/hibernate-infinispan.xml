<?xml version="1.0" encoding="UTF-8"?>
<infinispan
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:infinispan:config:14.0 http://www.infinispan.org/schemas/config/infinispan-config-14.0.xsd"
    xmlns="urn:infinispan:config:14.0">
  <cache-container name="hibernate" statistics="true">
    <local-cache name="entity">
      <memory max-count="10000"/>
      <expiration lifespan="1800000"/>
    </local-cache>
    <local-cache name="collection">
      <memory max-count="5000"/>
      <expiration lifespan="1800000"/>
    </local-cache>
    <local-cache name="natural-id">
      <memory max-count="5000"/>
      <expiration lifespan="1800000"/>
    </local-cache>
    <local-cache name="timestamps">
      <memory max-count="1000"/>
      <expiration lifespan="600000"/>
    </local-cache>
    <local-cache name="query">
      <memory max-count="1000"/>
      <expiration lifespan="600000"/>
    </local-cache>
  </cache-container>
</infinispan>
